{
  "extends": ["tslint-config-airbnb", "tslint-react"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "variable-name": false,
    "arrow-parens": [true, "ban-single-arg-parens"],
    "ter-arrow-parens": [true, "as-needed"],
    "import-name": false,
    "jsx-boolean-value": false,
    "jsx-no-multiline-js": false
  }
}
